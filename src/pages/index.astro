---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import { format } from "date-fns";
import Tags from "../components/Tags";
import path from "path";

const posts = (await getCollection("blog")).sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<Layout>
  <section>
    <ul class="grid max-w-5xl gap-x-10 gap-y-12 sm:grid-cols-2">
      {
        posts.map((post, index) => {
          const { title, date, imageURL, summary, tags } = post.data;
          const extension = path.extname(imageURL);
          const isFirst = index === 0;

          return (
            <li class={isFirst ? "lg:col-span-2" : ""}>
              <a
                href={`/${post.slug}/`}
                class={`relative inline-block aspect-video w-full overflow-hidden rounded-md`}
              >
                {extension.includes("webm") ? (
                  <video
                    src={imageURL}
                    width={720}
                    height={360}
                    autoplay
                    loop
                    muted
                    class="absolute h-full w-full object-cover transition-transform hover:scale-110"
                    transition:name={title}
                  />
                ) : (
                  <Image
                    width={720}
                    height={360}
                    transition:name={title}
                    loading={index <= 5 ? "eager" : "lazy"}
                    src={imageURL}
                    alt={`${title} cover pic`}
                    class="absolute h-full w-full object-cover transition-transform hover:scale-110"
                  />
                )}
              </a>

              <div class="my-2 flex items-center justify-between">
                {tags && <Tags list={tags} />}

                <time class="shrink-0 text-sm text-gray-500">
                  {format(new Date(date), "dd, LLL uuuu")}
                </time>
              </div>

              <a href={`/${post.slug}/`}>
                <h4
                  class={`font-secondary text-2xl transition-colors hover:text-primary ${isFirst ? "lg:text-4xl" : "lg:text-3xl"}`}
                >
                  {title}
                </h4>
              </a>

              <p class="text-gray-500 lg:text-lg">{summary}</p>
            </li>
          );
        })
      }
    </ul>
  </section>
</Layout>
